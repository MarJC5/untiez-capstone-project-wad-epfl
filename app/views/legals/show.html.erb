<div id="legal-page" class="main-content">
  <div class="main-content__side--left">
    <!-- SIDEBAR NAVIGATION -->
    <%= render partial: 'application/layouts/sidebar_account'%>
  </div>
  <div class="main-content__center">
    <!-- MOBILE BACK BTN -->
    <%= render partial: 'application/components/back', locals:{redirect: legals_path}%>
    <!-- PAGE CONTENT-->
    <h2 class="md:mb-8"><%= @legal.title %></h2>
    <div class="legal-content">
      <div id="markdown">
        <%= markdown(@legal.body) %>
      </div>
      <p><span class="gradient-text"><%= t('layout.text.last_update') %>: </span> <%= @legal.updated_at.strftime("%d %B %Y") %></p>
    </div>
  </div>
  <div class="main-content__side--right">
    <% if is_admin?(current_user) %>
      <!-- POST EDIT/DELETE BUTTONS -->
      <div class="post-show-edit">
        <a class="btn--svg-text" href="<%= edit_legal_path(@legal) %>"><%= svg 'edit' %> <%= t('layout.button.edit') %></a>
        <%= link_to legal_path(@legal), class: 'btn--svg-text--black', role: 'button' , method: :delete do %>
          <%= svg 'delete' %> <%= t('layout.button.delete') %>
        <% end %>
      </div>
      <hr/>
    <% end %>
    <!-- LEGALS TERMS NAV -->
    <h4><%= t('legal.title') %></h4>
    <ul class="mt-6">
      <% @legals.each do |legal| %>
        <li class="mb-2">
          <h6 class="gradient-text">
            <a href="<%= legal_path(legal) %>"><%= legal.title %></a>
          </h6>
        </li>
      <% end %>
    </ul>
  </div>
</div>
